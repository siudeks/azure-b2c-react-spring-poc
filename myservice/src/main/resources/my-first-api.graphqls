schema {
    query: Query
    subscription: Subscription
}

type Query {
    books: [Book!]
    book(id: Int): Book
}

type Subscription {
    newBook: Book!
    deletedBook: Book!
}

type Book {
    id: Int!
    name: String!
    ISBN: String!
    description: String
    author: Author!
}

type Author {
    id: Int!
    name: String!
    surname: String!
}